// styles
.main-wrap
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  min-width 570px
  min-height 260px
.main-content
  max-width 800px
  margin 0 auto
  position relative
.steps-content
  position absolute
  left 0
  top 40px
  bottom 40px
  width 100%
  overflow-y scroll
.webhook-list .steps-content
  bottom 0
.steps-footer
  position absolute
  left 0
  height 40px
  line-height 40px
  bottom 0
  width 100%
  border-top 1px solid #ddd
.main-body
  max-width 800px
  margin 0 auto
  padding 0 10px
  max-height 200px
  overflow-y scroll
.is-bot .main-body
  max-height 100%
.steps-head
  .main-body
    padding 8px 10px
.item
  padding 5px
  margin-top 3px
  margin-right 3px
  border-radius: 3px
  display inline-block
  background #eee
  .check-icon
    color #eee
  &.selected
    background green
    font-weight bold
    color #fefefe
    .check-icon
      color #fff
  &:hover
    background #333
    color #eee
    cursor pointer
.avatar
  width 16px
  height 16px
  display inline-block
  vertical-align middle
.step
  display inline-block
  vertical-align middle
  max-width 160px
.steps .ant-breadcrumb
  > span:last-child
    color rgba(0, 0, 0, 0.45)
  .current
    color #000
  .link
    color #08c
    &:hover
      color #333